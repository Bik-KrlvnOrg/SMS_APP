<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_navigation"
    app:startDestination="@id/accountFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.cheise_proj.core.feature.student.ui.account.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_accountFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_accountFragment_to_feesPaidFragment"
            app:destination="@id/feesPaidFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.cheise_proj.core.feature.student.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/feesPaidFragment"
        android:name="com.cheise_proj.core.feature.student.ui.fees.FeesPaidFragment"
        android:label="FeesPaid" />
</navigation>