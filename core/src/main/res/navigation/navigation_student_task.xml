<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_student_task"
    app:startDestination="@id/taskStudentFragment">

    <fragment
        android:id="@+id/taskStudentFragment"
        android:name="com.cheise_proj.core.feature.student.academics.task.TaskStudentFragment"
        android:label="Today's Task"
        tools:layout="@layout/fragment_student_task" >
        <action
            android:id="@+id/action_taskStudentFragment_to_taskDetailStudentFragment"
            app:destination="@id/taskDetailStudentFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailStudentFragment"
        android:name="com.cheise_proj.core.feature.student.academics.task.TaskDetailStudentFragment"
        android:label="Task Detail"
        tools:layout="@layout/fragment_student_task_detail" />
</navigation>