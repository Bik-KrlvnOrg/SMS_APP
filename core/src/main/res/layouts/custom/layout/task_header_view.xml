<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/medium_margin"
    app:cardCornerRadius="@dimen/medium_margin"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_margin">


        <TextView
            android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/sub_header"
            app:layout_constraintTop_toBottomOf="@id/header"
            tools:text="@tools:sample/full_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <View
            android:id="@+id/view_sep"
            app:layout_constraintTop_toBottomOf="@id/sub_header"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_sep"
            tools:src="@tools:sample/backgrounds/scenic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/item_1"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/view_sep"
            app:layout_constraintTop_toTopOf="@id/avatar"
            tools:text="@tools:sample/full_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/item_2"
            app:layout_constraintStart_toStartOf="@id/item_1"
            app:layout_constraintTop_toBottomOf="@id/item_1"
            tools:text="@tools:sample/full_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_sep"
            app:layout_constraintTop_toTopOf="@id/avatar"
            tools:text="@tools:sample/date/mmddyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>